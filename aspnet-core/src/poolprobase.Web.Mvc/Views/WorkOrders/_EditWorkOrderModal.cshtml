

@using poolprobase.Web.Models.Common.Modals
@model poolprobase.Web.Models.Customer.WorkOrder
@{
    Layout = null;
}

@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit Work Order"))

<!-- it should be easy to add any future editable properties here -->
<!-- class type makes it a modal-->
<div class="modal-body">    
    <dl class="dl-horizontal">
        <dt>Work Order:</dt> <dd>#@Model.WorkOrderID</dd>
        <dt>Customer:</dt> <dd>@Model.WO_Customer.FirstName @Model.WO_Customer.LastName - <span id="CustomerId">@Model.WO_Customer.CustomerID</span></dd>
        <dt>Address:</dt> <dd>@Model.WO_Customer.Address</dd>
   </dl>

    <form name="WorkOrderEditForm" role="form" novalidate class="form-validation">
        <!-- workorderid -->
        <input id="id" type="hidden" name="Id" value="@Model.WorkOrderID" />        
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="WorkOrderID" id="WorkOrderId"/>
                    </div>
                </div>
            </div>
        </div>
        @* should not be able to change the customer attached to an work order
        <!-- customer id -->
