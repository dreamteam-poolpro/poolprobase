            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">  
                        <label asp-for="CustomerID" class="control-label"></label>
                        <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID" id="CustomerId"></select>
                        <span asp-validation-for="CustomerID" class="text-danger"></span>                        
                    </div>
                </div>
            </div>
        </div>
