
@using poolprobase.Web.Startup

@model IEnumerable<poolprobase.Web.Models.Customer.WorkOrder>

@{
    ViewBag.CurrentPageName = PageNames.WorkOrders; //The menu item will be active for this page.
    ViewData["Title"] = "Work Orders";
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/WorkOrders/Index.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/WordOrders/Index.min.js" asp-append-version="true"></script>
    </environment>
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Work Orders
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Work Order ID</th>
                            <th>Customer</th>
                            <th>Address</th>
                            <th>Service Tech</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WorkOrderID</td>
                                <td>@item.WO_Customer.FirstName @item.WO_Customer.LastName</td>
                                <td>@item.WO_Customer.Address</td>
                                <td>@item.WO_ServiceTech.FirstName @item.WO_ServiceTech.LastName</td>

                                <!-- 3 bars type menu for each work order in the list of workorders -->
                                <td class="dropdown">

                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>

                                    <ul class="dropdown-menu pull-right">                     
                                        
                                       
                                        <!-- edit link -->
                                        <li>
                                            <a class="waves-effect waves-block edit-role" data-toggle="modal" data-role-id="@item.WorkOrderID" data-target="#WorkOrderEditModal">
                                                Edit
                                            </a>
                                        </li>
                                        

                                        <!-- details link -->
                                        <li><a class="waves-effect waves-block" asp-action="Details" asp-route-id="@item.WorkOrderID">Details</a></li>
                                        
                                        <!-- delete link -->
                                        <li>
                                            <a class="waves-effect waves-block delete-role" data-role-id="@item.WorkOrderID" data-role-name="@item.WO_Customer.FirstName @item.WO_Customer.LastName">
                                                <i class="material-icons">delete_sweep</i>
                                                @L("Delete")
                                            </a>                                         
                                        </li>

                                    </ul>
                                </td>

                                <!--@*
                                <td class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <!-- edit -->
                                        <li>
                                            <a href="#" class="waves-effect waves-block edit-role" data-role-id="@item.CustomerID" data-toggle="modal" data-target="#RoleEditModal">
                                                <i class="material-icons">edit</i>
                                                    @L("Edit")
                                            </a>
                                        </li>
                                        <!-- delete -->
                                        <li><a href="#" class="waves-effect waves-block delete-role" data-role-id="@item.CustomerID" data-role-name="@item.FirstName"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                        <!-- details -->
                                        <li><a href="#" class="waves-effect waves-block details-role" asp-action="Details" asp-route-id="@item.CustomerID">Details</a></li>
                                    </ul>
                                </td>*@-->
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" data-toggle="modal" data-target="#WorkOrderCreateModal">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- word order create modal-->
<div class="modal fade" id="CustomerCreateModal" tabindex="-1" role="dialog" aria-labelledby="CustomerCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>Create WorkOrder</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="roleCreateForm" role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <!-- list of customers dropdown-->
                                <div class="form-line">
                                    <input id="firstNameValue" type="text" name="Name" required maxlength="32" minlength="2" class="validate form-control">
                                    <label for="firstNameValue" class="form-label">First Name</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="lastNameValue" type="text" name="DisplayName" required maxlength="32" minlength="2" class="validate form-control">
                                    <label for="lastNameValue" class="form-label">Last Name</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="addressValue" type="text" name="Address" required maxlength="32" minlength="2" class="validate form-control">
                                    <label for="addressValue" class="form-label">Address</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="phoneNumberValue" type="tel" name="PhoneNumber" required maxlength="32" minlength="2" class="validate form-control">
                                    <label for="phoneNumberValue" class="form-label">Phone Number</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="emailAddressValue" type="email" name="EmailAddress" required maxlength="32" minlength="2" class="validate form-control">
                                    <label for="emailAddressValue" class="form-label">Email Address</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary waves-effect">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- makes it pop up a modal-->
<div class="modal fade" id="WorkOrderEditModal" tabindex="-1" role="dialog" aria-labelledby="WorkOrderEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <!-- class type tells is to load the partial view as a modal -->
        <div class="modal-content">
            <!-- the partial view _awoifjqwero loads here-->
        </div>
    </div>
</div>



