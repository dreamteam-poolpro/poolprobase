@using poolprobase.Web.Models.Common.Modals
@model poolprobase.Web.Models.Customer.ServiceTech
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditRole")))



<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>@L("CreateNewTech")</span>
            </h4>
        </div>
        <div class="modal-body">
            <form asp-action="Create" name="techCreateForm" role="form" novalidate class="form-validation">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input asp-for="FirstName" id="FirstName" type="text" name="Name" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="FirstName" class="form-label">@L("FirstName")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input asp-for="LastName" id="LastName" type="text" name="DisplayName" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="LastName" class="form-label">@L("LastName")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
            </form>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/ServiceTechs/_EditTechModal.js" asp-append-version="true"></script>
