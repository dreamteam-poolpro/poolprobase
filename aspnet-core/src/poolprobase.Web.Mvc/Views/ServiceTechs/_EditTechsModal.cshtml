@using poolprobase.Web.Models.Common.Modals
@model poolprobase.Web.Models.Customer.ServiceTech
@{
    Layout = null;
}

@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit Tech"))

<div class="modal-body">
    <form asp-action="Edit" name="RoleEditForm" role="form" novalidate class="form-validation">
        <input asp-for="ServiceTechID" id="id" type="hidden" name="Id" value="@Model.ServiceTechID" />
       
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input asp-for="FirstName" id="rolename"  type="text" name="Name" value="@Model.FirstName" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="rolename" class="form-label">First Name</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input asp-for="LastName" id="displayname" type="text" name="DisplayName" value="@Model.LastName" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="displayname" class="form-label">Last Name</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")


<script src="~/view-resources/Views/ServiceTechs/_EditTechModal.js" asp-append-version="true"></script>
